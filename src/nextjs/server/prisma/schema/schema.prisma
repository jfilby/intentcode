generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public", "core"]
}

// Project specific

// Batch

model BatchJob {
  id                         String           @id @default(cuid())
  instanceId                 String?          @map("instance_id")
  instance                   Instance?        @relation(fields: [instanceId], references: [id])
  userProfileId              String?          @map("user_profile_id")
  userProfile                UserProfile?     @relation(fields: [userProfileId], references: [id])
  runInATransaction          Boolean          @map("run_in_a_transaction")
  status                     String           @db.Char(1)
  progressPct                Int?             @map("progress_pct")
  message                    String?
  jobType                    String           @map("job_type")
  refModel                   String?          @map("ref_model")
  refId                      String?          @map("ref_id")
  parameters                 String?          // Stringified JSON
  created                    DateTime         @default(now())
  updated                    DateTime         @updatedAt

  @@index([refId])
  @@map("batch_job")
  @@schema("public")
}

// Wait-list

model Waitlist {
  email                        String               @id

  @@map("waitlist")
  @@schema("public")
}

// IntentCode: Source graph

model SourceEdge {
  id                         String            @id @default(cuid())
  fromId                     String            @map("from_id")
  from                       SourceNode        @relation("from", fields: [fromId], references: [id])
  toId                       String            @map("to_id")
  to                         SourceNode        @relation("to", fields: [toId], references: [id])
  status                     String            @db.Char(1)
  name                       String

  @@unique([fromId, toId, name])
  @@map("source_edge")
  @@schema("public")
}

model SourceNode {
  id                         String            @id @default(cuid())
  parentId                   String?           @map("parent_id")
  parent                     SourceNode?       @relation("parent", fields: [parentId], references: [id])
  instanceId                 String            @map("instance_id")
  instance                   Instance          @relation(fields: [instanceId], references: [id])
  status                     String            @db.Char(1)
  type                       String
  path                       String?
  name                       String
  content                    String?
  contentHash                String?           @map("content_hash")
  jsonContent                Json?             @map("json_content") @db.JsonB
  jsonContentHash            String?           @map("json_content_hash")
  created                    DateTime          @default(now())
  updated                    DateTime          @updatedAt

  outgoingEdges              SourceEdge[]      @relation("from")
  incomingEdges              SourceEdge[]      @relation("to")
  children                   SourceNode[]      @relation("parent")

  @@unique([parentId, instanceId, type, name])
  @@index([contentHash])
  @@map("source_node")
  @@schema("public")
}
