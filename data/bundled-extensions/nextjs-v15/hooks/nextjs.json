{
  "name": "Bundled Next.js v15+ hooks",
  "context": [
    {
      "anyDependency": [
        {
          "name": "nextjs",
          "minVersion": "15"
        }
      ]
    }
  ],
  "deps": {
    "tool": "npm"
  },
  "hooks": {
    "intentcode/newProject": {
      "commands": [
        "npx create-next-app@latest ${projectName} --ts --eslint --app --src-dir --use-npm"
      ],
      "variables": {
        "projectName": {
          "required": true,
          "type": "string",
          "description":
            "Name of the project, creates a directory with this name"
        }
      }
    },
    "intentcode/installDependencies": {
      "commands": [
        "cd ${projectDir}",
        "npm install"
      ],
      "variables": {
        "projectDir": {
          "required": true,
          "type": "path",
          "description": "Project directory"
        }
      }
    },
    "intentcode/updateDependencies": {
      "commands": [
        "cd ${projectDir}",
        "npm update"
      ],
      "variables": {
        "projectDir": {
          "required": true,
          "type": "path",
          "description": "Project directory"
        }
      }
    }
  }
}
